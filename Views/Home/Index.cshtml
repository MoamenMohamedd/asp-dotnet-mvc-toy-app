@model HomeViewModel

@{
    ViewData["Title"] = "ASP Toy App";
}


<h1>@ViewData["FormAction"] Employee</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action=@ViewData["FormAction"]>
            @if (ViewData["FormAction"].Equals("Edit"))
            {<input type="hidden" asp-for="FocusedEmployee.Id" />}

            <div class="form-group">
                <label asp-for="FocusedEmployee.FullName" class="control-label"></label>
                <input asp-for="FocusedEmployee.FullName" class="form-control" />
                <span asp-validation-for="FocusedEmployee.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FocusedEmployee.Email" class="control-label"></label>
                <input asp-for="FocusedEmployee.Email" class="form-control" />
                <span asp-validation-for="FocusedEmployee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@ViewData["FormAction"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<h1>Employee List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    -
                    <a data-id="@item.Id" class="btn btn-primary" data-toggle="modal" data-target="#DeleteConfirmationModal">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="modal fade" id="DeleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="DeleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteConfirmationModalLabel">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure ?</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" />
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-warning">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $('#DeleteConfirmationModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data("id");
                var modal = $(this);

                modal.find('input[name=id]').val(id);
            });
        });
    </script>
}